<% include ./partials/header %>

<h1> index page</h1>
<div class='ui main text container'>
    <div class='ui huge header'>RESTful BLOG</div>
    <div class='ui top attached segment'>
        <div class='ui divided items'>
            <% blogs.forEach(function(blog){ %>
                <div class='item'>
                    <div class='image'>
                        <img src='<%= blog.image %>'>
                    </div>
                    <div class='content'>
                        <a class='header href='/blogs/<%= blog._id %>''><%= blog.title %></a>
                    
                    <div class='meta'>
                         <span><%= blog.created.toDateString()  %></span>

                    </div>
                    <div class='description'>
                        <p><%- blog.body %>..</p>
                    </div>
                    <div class='extra' >
                         <a style="margin:5px" class='ui floated basic green button' href='/blogs/<%= blog._id %>'>
                             READ MORE<i class='right chevron icon'></i>
                             </a>
                    </div>
                  </div>
                </div>
                <% })%>
            
        </div>
    </div>
</div>


<% include ./partials/footer %>


